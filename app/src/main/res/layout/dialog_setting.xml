<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:layout_centerInParent="true"
        android:background="@color/white"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="12.5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_dialog"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_edit"
                android:gravity="left"
                android:padding="15dp"
                android:text="@string/text_edit"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="#008ae7" />

            <TextView
                android:id="@+id/tv_duplicate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_duplicate"
                android:gravity="left"
                android:padding="15dp"
                android:text="@string/text_duplicate"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="#008ae7" />

            <TextView
                android:id="@+id/tv_review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_preview"
                android:gravity="left"
                android:padding="15dp"
                android:text="@string/text_review"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="#008ae7" />

            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_delete"
                android:gravity="left"
                android:padding="15dp"
                android:text="@string/text_delete"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>